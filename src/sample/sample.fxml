<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<VBox fx:id="mainBox" alignment="center" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.Controller">

    <stylesheets>
       <URL value="@/css/Style.css"/>
    </stylesheets>
    <padding>
        <Insets top="5" left="5" right="5" bottom="5"/>
    </padding>
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS">

    </TextArea>
    <HBox spacing="10">
        <padding>
            <Insets top="5"/>
        </padding>
        <TextField fx:id="textField" onAction="#sendMsg" promptText="Введите сообщение" HBox.hgrow="ALWAYS">

        </TextField>
        <Button fx:id="btn1" minWidth="80" onAction="#sendMsg" text="Send">

        </Button>
    </HBox>
</VBox>